<%-include('partials/Head')  %> 
          <div class="blog-info">
            
          <form method="POST" action="/blogg"> 
            <div class="form-group">
              <label for="fullName">Enter your fullname:*</label>
              <input name="name" type="text" class="form-control" id="fullName" placeholder="e.g Chiloane Tebogo">
            </div>
            <div class="form-group">
              <label for="Topic">Topic:*</label>
              <input name ="Topic" type="text" class="form-control" id="Topic" placeholder="Enter your topic">
            </div>
            
            <div class="form-group">
              <label for="Subject">Enter the subject of your Blog:*</label>
              <input name="Sub" type="text" class="form-control" id="Subject" >
            </div>
            <div class="form-group">
              <label for="Key">Enter a unique key for your Blog:*</label>
              <input name="Key" type="text" class="form-control" id="Key" >
            </div>
            <div class="mb-3">
              <label for="BlogArea" class="form-label">Enter Your blog here:*</label>
              <textarea name = "Blog" class="form-control" id="BlogArea" rows="4"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
     
  
